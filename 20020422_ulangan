#include <iostream>
using namespace std;

int main()

{

    {
    int nilai_Tugas;
    string keterangan;
    cout<<"Masukan Nilai Tugas = " ;cin>>nilai_Tugas ;
      if (nilai_Tugas  > 100){
          keterangan = "Tidak boleh lebih dari 100";
        cout<<keterangan<<endl;
        return 0;
        }
    int nilai_UTS;
    cout<<"Masukan Nilai UTS = " ;cin>>nilai_UTS;
      if (nilai_UTS > 100){
        cout<<"Tidak boleh lebih dari 100"<<endl ;
        return 0;
      }
    int nilai_UAS;
    cout<<"Masukan Nilai UAS = " ;cin>>nilai_UAS;
      if (nilai_UAS > 100){
        cout<<"Tidak boleh lebih dari 100"<<endl ;
        return 0;
      }

    float nilai;
    nilai = nilai_Tugas*0.3 + nilai_UTS*0.3 + nilai_UAS*0.4 ;
    cout<<nilai;
    }
    return 0;
}
